<!-- Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= pageTitle %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/admin/transportations/edit/<%= item._id %>" class="btn btn-primary"><i class="fas fa-edit me-2"></i>Sửa</a>
    <a href="/admin/transportations" class="btn btn-outline-secondary ms-2"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
  </div>
  </div>

<div class="row">
  <div class="col-lg-8">
    <div class="card mb-4">
      <div class="card-header"><h5 class="mb-0">Thông tin</h5></div>
      <div class="card-body">
        <div class="mb-2"><strong>Tên:</strong> <%= item.name %></div>
        <% if (item.nameEn) { %><div class="mb-2"><strong>Tên EN:</strong> <%= item.nameEn %></div><% } %>
        <div class="mb-2"><strong>Danh mục:</strong> <%= item.category %></div>
        <div class="mb-2"><strong>Loại:</strong> <%= item.type %></div>
        <div class="mb-3"><strong>Mô tả:</strong><div class="text-muted"><%= item.description %></div></div>
        <% if ((item.features||[]).length) { %>
          <div class="mb-2"><strong>Đặc điểm:</strong>
            <% item.features.forEach(f=>{ %>
              <span class="badge text-bg-light border me-1"><%= f %></span>
            <% }) %>
          </div>
        <% } %>
        <% if ((item.tips||[]).length) { %>
          <div class="mb-2"><strong>Tips:</strong>
            <% item.tips.forEach(t=>{ %>
              <span class="badge text-bg-secondary me-1"><%= t %></span>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header"><h5 class="mb-0">Tuyến/Thông tin</h5></div>
      <div class="card-body">
        <% if (!item.routes || item.routes.length===0) { %>
          <div class="text-muted">Chưa có tuyến</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table">
              <thead><tr><th>Tên</th><th>Từ</th><th>Đến</th><th>Thời gian</th><th>Tần suất</th><th>Giá (VND)</th></tr></thead>
              <tbody>
                <% item.routes.forEach(r=>{ %>
                  <tr>
                    <td><%= r.name || '' %></td>
                    <td><%= r.from || '' %></td>
                    <td><%= r.to || '' %></td>
                    <td><%= r.duration || '' %></td>
                    <td><%= r.frequency || '' %></td>
                    <td><%= r.price || '' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-header"><h5 class="mb-0">Hình ảnh</h5></div>
      <div class="card-body">
        <% if (!item.images || item.images.length===0) { %>
          <div class="text-muted">Chưa có hình ảnh</div>
        <% } else { %>
          <div class="d-flex flex-wrap gap-2">
            <% item.images.forEach(img=>{ %>
              <img src="<%= img.url %>" style="width:96px;height:96px;object-fit:cover;border-radius:6px;">
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
    <div class="card">
      <div class="card-header"><h5 class="mb-0">Trạng thái</h5></div>
      <div class="card-body">
        <div class="mb-2"><strong>Kích hoạt:</strong> <%= item.isActive ? 'Có' : 'Không' %></div>
        <div class="mb-2"><strong>Nổi bật:</strong> <%= item.featured ? 'Có' : 'Không' %></div>
        <div class="mb-2"><strong>Tags:</strong> <% (item.tags||[]).forEach(t=>{ %><span class="badge text-bg-light border me-1"><%= t %></span><% }) %></div>
        <div class="text-muted small">Tạo: <%= new Date(item.createdAt).toLocaleString('vi-VN') %></div>
        <div class="text-muted small">Cập nhật: <%= new Date(item.updatedAt).toLocaleString('vi-VN') %></div>
      </div>
    </div>
  </div>
</div>


