<!-- Contact Detail View -->
<div class="admin-content">
    <div class="admin-header">
        <div class="header-left">
            <div class="breadcrumb">
                <a href="/admin/contacts">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
            <h1 class="page-title">Chi tiết liên hệ</h1>
            <p class="page-subtitle">Thông tin chi tiết tin nhắn từ khách hàng</p>
        </div>
        <div class="header-right">
            <div class="contact-status-info">
                <span class="status-badge <%= contact.status %>">
                    <i class="fa fa-circle"></i>
                    <%= contact.statusText %>
                </span>
                <div class="contact-time">
                    <i class="fa fa-clock-o"></i>
                    <%= contact.timeAgo %>
                </div>
            </div>
        </div>
    </div>

    <div class="contact-detail-container">
        <!-- Contact Information -->
        <div class="detail-section">
            <div class="section-header">
                <h3><i class="fa fa-user"></i> Thông tin liên hệ</h3>
            </div>
            <div class="section-content">
                <div class="info-grid">
                    <div class="info-item">
                        <label>Tên:</label>
                        <span><%= contact.name %></span>
                    </div>
                    <div class="info-item">
                        <label>Email:</label>
                        <span>
                            <a href="mailto:<%= contact.email %>">
                                <i class="fa fa-envelope"></i>
                                <%= contact.email %>
                            </a>
                        </span>
                    </div>
                    <div class="info-item">
                        <label>Quốc gia:</label>
                        <span class="country-badge">
                            <i class="fa fa-globe"></i>
                            <%= contact.country %>
                        </span>
                    </div>
                    <div class="info-item">
                        <label>Thời gian gửi:</label>
                        <span>
                            <i class="fa fa-calendar"></i>
                            <%= new Date(contact.createdAt).toLocaleString('vi-VN') %>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Message Content -->
        <div class="detail-section">
            <div class="section-header">
                <h3><i class="fa fa-comment"></i> Nội dung tin nhắn</h3>
            </div>
            <div class="section-content">
                <div class="message-content">
                    <%= contact.message.replace(/\n/g, '<br>') %>
                </div>
            </div>
        </div>

        <!-- Status Information -->
        <div class="detail-section">
            <div class="section-header">
                <h3><i class="fa fa-info-circle"></i> Thông tin trạng thái</h3>
            </div>
            <div class="section-content">
                <div class="info-grid">
                    <% if (contact.readAt) { %>
                        <div class="info-item">
                            <label>Đã đọc lúc:</label>
                            <span>
                                <i class="fa fa-eye"></i>
                                <%= new Date(contact.readAt).toLocaleString('vi-VN') %>
                            </span>
                        </div>
                    <% } %>
                    <% if (contact.repliedAt) { %>
                        <div class="info-item">
                            <label>Đã trả lời lúc:</label>
                            <span>
                                <i class="fa fa-reply"></i>
                                <%= new Date(contact.repliedAt).toLocaleString('vi-VN') %>
                            </span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="detail-actions">
            <div class="action-buttons">
                <% if (contact.status === 'new') { %>
                    <a href="/admin/contacts/<%= contact._id %>/mark-read" 
                       class="btn btn-warning"
                       onclick="return confirm('Đánh dấu đã đọc?')">
                        <i class="fa fa-check"></i> Đánh dấu đã đọc
                    </a>
                <% } %>
                
                <% if (contact.status === 'read') { %>
                    <a href="/admin/contacts/<%= contact._id %>/mark-replied" 
                       class="btn btn-success"
                       onclick="return confirm('Đánh dấu đã trả lời?')">
                        <i class="fa fa-reply"></i> Đánh dấu đã trả lời
                    </a>
                <% } %>
                
                <button onclick="openReplyModal()" class="btn btn-primary">
                    <i class="fa fa-envelope"></i> Trả lời email
                </button>
                
                <a href="/admin/contacts/<%= contact._id %>/delete" 
                   class="btn btn-danger"
                   onclick="return confirm('Bạn có chắc muốn xóa liên hệ này? Hành động này không thể hoàn tác.')">
                    <i class="fa fa-trash"></i> Xóa liên hệ
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Reply Email Modal -->
<div id="replyModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fa fa-envelope"></i> Trả lời email</h3>
            <button onclick="closeReplyModal()" class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <form id="replyForm" onsubmit="submitReply(event)">
                <div class="form-group">
                    <label for="replySubject">Tiêu đề email:</label>
                    <input type="text" id="replySubject" name="subject" class="form-control" 
                           placeholder="Nhập tiêu đề email..." required>
                </div>
                
                <div class="form-group">
                    <label for="replyMessage">Nội dung trả lời:</label>
                    <textarea id="replyMessage" name="message" class="form-control" rows="8" 
                              placeholder="Nhập nội dung trả lời..." required></textarea>
                </div>
                
                <div class="form-actions">
                    <button type="button" onclick="closeReplyModal()" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-paper-plane"></i> Gửi email
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Modal functions
function openReplyModal() {
    document.getElementById('replyModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
}

function closeReplyModal() {
    document.getElementById('replyModal').style.display = 'none';
    document.body.style.overflow = 'auto';
    // Clear form
    document.getElementById('replyForm').reset();
}

// Submit reply form
async function submitReply(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    const subject = formData.get('subject');
    const message = formData.get('message');
    
    if (!subject || !message) {
        showNotification('Vui lòng điền đầy đủ thông tin', 'error');
        return;
    }
    
    try {
        const response = await fetch(`/admin/contacts/<%= contact._id %>/reply`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ subject, message })
        });
        
        const result = await response.json();
        
        if (result.success) {
            showNotification('Email trả lời đã được gửi thành công!', 'success');
            closeReplyModal();
            // Reload page to update status
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            showNotification('Có lỗi xảy ra: ' + result.message, 'error');
        }
    } catch (error) {
        showNotification('Có lỗi xảy ra khi gửi email', 'error');
    }
}

// Show notification function
function showNotification(message, type) {
    // Remove existing notifications
    const existingNotifications = document.querySelectorAll('.notification');
    existingNotifications.forEach(notification => notification.remove());
    
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `notification notification-${type}`;
    notification.innerHTML = `
        <div class="notification-content">
            <i class="fa fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
            <span>${message}</span>
        </div>
    `;
    
    // Add to page
    document.body.appendChild(notification);
    
    // Auto remove after 3 seconds
    setTimeout(() => {
        notification.remove();
    }, 3000);
}

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('replyModal');
    if (event.target === modal) {
        closeReplyModal();
    }
}
</script>

