<!-- Top Row - Statistics Cards -->
<div class="row mb-4">
    <div class="col-6 col-lg-3 col-md-6">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon purple">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="ms-3">
                    <h6 class="text-muted mb-1">Lượt xem</h6>
                    <h4 class="mb-0"><%= stats.views || '112.000' %></h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3 col-md-6">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon blue">
                    <i class="fas fa-landmark"></i>
                </div>
                <div class="ms-3">
                    <h6 class="text-muted mb-1">Điểm tham quan</h6>
                    <h4 class="mb-0"><%= stats.attractions || '0' %></h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3 col-md-6">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon green">
                    <i class="fas fa-bed"></i>
                </div>
                <div class="ms-3">
                    <h6 class="text-muted mb-1">Lưu trú</h6>
                    <h4 class="mb-0"><%= stats.accommodations || '0' %></h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3 col-md-6">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon red">
                    <i class="fas fa-star"></i>
                </div>
                <div class="ms-3">
                    <h6 class="text-muted mb-1">Đánh giá</h6>
                    <h4 class="mb-0"><%= stats.reviews || '0' %></h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Left Column - Charts -->
    <div class="col-12 col-lg-8">
        <!-- Lượt truy cập theo tháng -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Lượt truy cập theo tháng</h5>
            </div>
            <div class="card-body">
                <div id="profile-visit-chart" style="height: 300px;"></div>
            </div>
        </div>
        
        <!-- Đánh giá gần đây -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Đánh giá gần đây</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-lg">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Đánh giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (recentReviews && recentReviews.length > 0) { %>
                                <% recentReviews.forEach(review => { %>
                                    <tr>
                                        <td class="col-3">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-md">
                                                    <img src="/client/img/avatar.png" class="rounded-circle" width="40" height="40">
                                                </div>
                                                <p class="font-bold ms-3 mb-0"><%= review.user ? review.user.name : 'Khách du lịch' %></p>
                                            </div>
                                        </td>
                                        <td class="col-auto">
                                            <p class="mb-0"><%= review.content.length > 50 ? review.content.substring(0, 50) + '...' : review.content %></p>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td class="col-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-md">
                                                <img src="/client/img/avatar.png" class="rounded-circle" width="40" height="40">
                                            </div>
                                            <p class="font-bold ms-3 mb-0">Nguyễn Văn A</p>
                                        </div>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">Hà Nội thật tuyệt vời! Tôi rất thích chuyến du lịch này.</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-md">
                                                <img src="/client/img/avatar.png" class="rounded-circle" width="40" height="40">
                                            </div>
                                            <p class="font-bold ms-3 mb-0">Trần Thị B</p>
                                        </div>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">Ẩm thực Hà Nội rất ngon, tôi sẽ quay lại lần nữa!</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right Column - Additional Info -->
    <div class="col-12 col-lg-4">
        <!-- Admin Profile -->
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="mb-3">
                    <img src="/client/img/avatar.png" class="rounded-circle" width="80" height="80" alt="Admin">
                </div>
                <h5 class="mb-1">Admin</h5>
                <p class="text-muted mb-0">@admin</p>
            </div>
        </div>
        
        <!-- Tin tức gần đây -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Tin tức gần đây</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar me-3">
                        <img src="/client/img/avatar.png" class="rounded-circle" width="40" height="40">
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Lễ hội mùa thu</h6>
                        <small class="text-muted">Tin tức</small>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar me-3">
                        <img src="/client/img/avatar.png" class="rounded-circle" width="40" height="40">
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Tour mới</h6>
                        <small class="text-muted">Khuyến mãi</small>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar me-3">
                        <img src="/client/img/avatar.png" class="rounded-circle" width="40" height="40">
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0">Ẩm thực đặc sắc</h6>
                        <small class="text-muted">Ẩm thực</small>
                    </div>
                </div>
                <button class="btn btn-primary btn-sm w-100">Xem tất cả</button>
            </div>
        </div>
        
        <!-- Thống kê theo khu vực -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Thống kê theo khu vực</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary rounded-circle me-2" style="width: 10px; height: 10px;"></div>
                    <span class="fw-bold">Hà Nội</span>
                    <span class="ms-auto">862</span>
                </div>
                <div id="europe-chart" style="height: 100px;"></div>
                
                <div class="d-flex align-items-center mb-3 mt-3">
                    <div class="bg-success rounded-circle me-2" style="width: 10px; height: 10px;"></div>
                    <span class="fw-bold">TP.HCM</span>
                    <span class="ms-auto">375</span>
                </div>
                
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-info rounded-circle me-2" style="width: 10px; height: 10px;"></div>
                    <span class="fw-bold">Đà Nẵng</span>
                    <span class="ms-auto">625</span>
                </div>
                
                <div class="d-flex align-items-center">
                    <div class="bg-danger rounded-circle me-2" style="width: 10px; height: 10px;"></div>
                    <span class="fw-bold">Hạ Long</span>
                    <span class="ms-auto">1025</span>
                </div>
            </div>
        </div>
    </div>
</div>
</div>