<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= pageTitle %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/accommodations/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Thêm mới
        </a>
    </div>
</div>

<!-- Flash Messages -->
<% if (typeof flash !== 'undefined' && flash.success && flash.success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <%= flash.success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (typeof flash !== 'undefined' && flash.error && flash.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <%= flash.error[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-filter me-2"></i>
            Bộ lọc và tìm kiếm
        </h5>
    </div>
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="search" class="form-label">Tìm kiếm</label>
                <input type="text" class="form-control" id="search" name="search" 
                       value="<%= search %>" placeholder="Tên lưu trú...">
            </div>
            <div class="col-md-3">
                <label for="status" class="form-label">Trạng thái</label>
                <select class="form-select" id="status" name="status">
                    <option value="">Tất cả trạng thái</option>
                    <option value="active" <%= status === 'active' ? 'selected' : '' %>>Hoạt động</option>
                    <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Tạm dừng</option>
                    <option value="featured" <%= status === 'featured' ? 'selected' : '' %>>Nổi bật</option>
                    <option value="public" <%= status === 'public' ? 'selected' : '' %>>Công khai</option>
                    <option value="draft" <%= status === 'draft' ? 'selected' : '' %>>Bản nháp</option>
                    <option value="hidden" <%= status === 'hidden' ? 'selected' : '' %>>Ẩn</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-search me-1"></i>
                    Tìm kiếm
                </button>
            </div>
            <div class="col-12">
                <a href="/admin/accommodations" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>
                    Xóa bộ lọc
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Danh sách lưu trú (<%= accommodations ? accommodations.length : 0 %>)
        </h5>
    </div>
    <div class="card-body">
        <% if (accommodations && accommodations.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;">Hình ảnh</th>
                            <th>Tên</th>
                            <th style="width: 200px;">Địa chỉ</th>
                            <th style="width: 100px;">Giá từ</th>
                            <th style="width: 100px;">Đánh giá</th>
                            <th style="width: 100px;">Trạng thái</th>
                            <th style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% accommodations.forEach(accommodation => { %>
                            <tr>
                                <td>
                                    <% if (accommodation.images && accommodation.images.length > 0) { %>
                                        <img src="<%= accommodation.images[0] %>" 
                                             alt="<%= accommodation.name %>" 
                                             class="rounded" 
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                             style="width: 60px; height: 60px;">
                                            <i class="fas fa-bed text-muted"></i>
                                        </div>
                                    <% } %>
                                </td>
                                <td>
                                    <div>
                                        <strong><%= accommodation.name %></strong>
                                        <% if (accommodation.featured) { %>
                                            <span class="badge bg-warning ms-1">Nổi bật</span>
                                        <% } %>
                                        <% if (accommodation.star) { %>
                                            <div class="mt-1">
                                                <% for (let i = 1; i <= 5; i++) { %>
                                                    <i class="fas fa-star <%= i <= accommodation.star ? 'text-warning' : 'text-muted' %>" style="font-size: 0.7em;"></i>
                                                <% } %>
                                            </div>
                                        <% } %>
                                    </div>
                                    <% if (accommodation.description) { %>
                                        <div class="mt-1">
                                            <small class="text-muted"><%= accommodation.description.length > 50 ? accommodation.description.substring(0, 50) + '...' : accommodation.description %></small>
                                        </div>
                                    <% } %>
                                </td>
                                <td>
                                    <div>
                                        <%= accommodation.address %>
                                    </div>
                                </td>
                                <td>
                                    <strong class="text-success">
                                        <%= new Intl.NumberFormat('vi-VN').format(accommodation.priceFrom) %>đ
                                    </strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="me-1"><%= accommodation.avgRating || 0 %></span>
                                        <div class="rating">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star <%= i <= (accommodation.avgRating || 0) ? 'text-warning' : 'text-muted' %>" style="font-size: 0.8em;"></i>
                                            <% } %>
                                        </div>
                                        <small class="text-muted ms-1">(<%= accommodation.reviewCount || 0 %>)</small>
                                    </div>
                                </td>
                                <td>
                                    <% if (accommodation.isActive) { %>
                                        <span class="badge bg-success">Hoạt động</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Tạm dừng</span>
                                    <% } %>
                                    <br>
                                    <% if (accommodation.status === 'public') { %>
                                        <span class="badge bg-primary mt-1">Công khai</span>
                                    <% } else if (accommodation.status === 'draft') { %>
                                        <span class="badge bg-warning mt-1">Bản nháp</span>
                                    <% } else if (accommodation.status === 'hidden') { %>
                                        <span class="badge bg-dark mt-1">Ẩn</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/admin/accommodations/<%= accommodation._id %>" 
                                           class="btn btn-sm btn-outline-info" 
                                           title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/accommodations/edit/<%= accommodation._id %>" 
                                           class="btn btn-sm btn-outline-primary" 
                                           title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-danger" 
                                                title="Xóa"
                                                onclick="accommodationAdmin.confirmDelete('<%= accommodation._id %>', '<%= accommodation.name %>')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>&type=<%= type %>&status=<%= status %>">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&search=<%= search %>&type=<%= type %>&status=<%= status %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>&type=<%= type %>&status=<%= status %>">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-bed fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không có lưu trú nào</h5>
                <p class="text-muted">
                    <% if (search || type || status) { %>
                        Không tìm thấy lưu trú phù hợp với bộ lọc của bạn
                    <% } else { %>
                        Hãy thêm lưu trú đầu tiên của bạn
                    <% } %>
                </p>
                <a href="/admin/accommodations/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Thêm lưu trú
                </a>
                <% if (search || type || status) { %>
                    <a href="/admin/accommodations" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-times me-2"></i>
                        Xóa bộ lọc
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa lưu trú <strong id="deleteName"></strong>?</p>
                <p class="text-danger"><small>Hành động này không thể hoàn tác!</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Đã chuyển sang dùng accommodationAdmin.confirmDelete để tránh bị ghi đè bởi admin.js
</script>
