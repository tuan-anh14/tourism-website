<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>HÀ NỘI</title>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
        />
        <link rel="stylesheet" href="/client/css/style.css" />
        <link rel="stylesheet" href="/client/css/responsive.css" />
        <link rel="stylesheet" href="/client/css/harmony.css" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/client/img/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/client/img/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/client/img/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
    </head>
    <body
        onload='if (window.location.href.substr(window.location.href.length - 6) == "#about") { introAboutLogoTransition(); }'
    >
        <!--navbar-->
        <%- include('../../partials/header') %>
        <!--navbar-->

        <!-- Page Header -->
        <header class="page-header" style="background-image: url('<%= hero.backgroundImage %>');">
            <div class="header-content">
                <h2 id="quote">Sự kiện & Giải trí</h2>
                <div class="line"></div>
                <h1><%= hero.title %></h1>
                <p><%= hero.subtitle %></p>
            </div>
        </header>

        <!--Entertainment Venues Section-->
        <section class="page-section" id="entertainments">
            <div class="title">
                <h1 class="dark">Địa điểm giải trí</h1>
                <div class="line"></div>
            </div>
            <div class="standard-row">
                <% entertainments.slice(0, 3).forEach(function(entertainment){ %>
                    <article class="standard-card col">
                        <img src="<%= entertainment.image %>" alt="<%= entertainment.title %>" />
                        <div class="card-content">
                            <h4 class="dark"><%= entertainment.title %></h4>
                            <p class="font-color"><%= entertainment.description %></p>
                            <div class="entertainment-details">
                                <p><strong>Loại hình:</strong> <%= entertainment.category %></p>
                                <p><strong>Giá vé:</strong> <%= entertainment.price %></p>
                            </div>
                            <a href="/entertainment/<%= entertainment.slug %>" class="ctn">Xem chi tiết</a>
                        </div>
                    </article>
                <% }) %>
            </div>

            <!-- Additional Entertainment Row -->
            <div class="standard-row" style="margin-top: 60px;">
                <% entertainments.slice(3, 6).forEach(function(entertainment){ %>
                    <article class="standard-card col">
                        <img src="<%= entertainment.image %>" alt="<%= entertainment.title %>" />
                        <div class="card-content">
                            <h4 class="dark"><%= entertainment.title %></h4>
                            <p class="font-color"><%= entertainment.description %></p>
                            <div class="entertainment-details">
                                <p><strong>Loại hình:</strong> <%= entertainment.category %></p>
                                <p><strong>Giá vé:</strong> <%= entertainment.price %></p>
                            </div>
                            <a href="/entertainment/<%= entertainment.slug %>" class="ctn">Xem chi tiết</a>
                        </div>
                    </article>
                <% }) %>
            </div>
        </section>

        <!--Events Section-->
        <section class="page-section" id="events">
            <div class="title">
                <h1 class="dark">Sự kiện nổi bật</h1>
                <div class="line"></div>
            </div>
            <div class="standard-row">
                <% events.slice(0, 3).forEach(function(event){ %>
                    <article class="standard-card col">
                        <img src="<%= event.image %>" alt="<%= event.title %>" />
                        <div class="card-content">
                            <h4 class="dark"><%= event.title %></h4>
                            <p class="font-color"><%= event.description %></p>
                            <div class="event-details">
                                <p><strong>Thời gian:</strong> <%= event.details.time %></p>
                                <p><strong>Địa điểm:</strong> <%= event.details.location %></p>
                                <% if (event.details.language) { %>
                                    <p><strong>Ngôn ngữ:</strong> <%= event.details.language %></p>
                                <% } %>
                                <p><strong><%= event.details.price.includes('Miễn') ? 'Phí:' : 'Giá vé:' %></strong> <%= event.details.price %></p>
                            </div>
                            <a href="<%= event.action.href %>" class="ctn"><%= event.action.label %></a>
                        </div>
                    </article>
                <% }) %>
            </div>

            <!-- Additional Events Row -->
            <div class="standard-row" style="margin-top: 60px;">
                <% events.slice(3, 6).forEach(function(event){ %>
                    <article class="standard-card col">
                        <img src="<%= event.image %>" alt="<%= event.title %>" />
                        <div class="card-content">
                            <h4 class="dark"><%= event.title %></h4>
                            <p class="font-color"><%= event.description %></p>
                            <div class="event-details">
                                <p><strong>Thời gian:</strong> <%= event.details.time %></p>
                                <p><strong>Địa điểm:</strong> <%= event.details.location %></p>
                                <% if (event.details.language) { %>
                                    <p><strong>Ngôn ngữ:</strong> <%= event.details.language %></p>
                                <% } %>
                                <p><strong><%= event.details.price.includes('Miễn') ? 'Phí:' : 'Giá vé:' %></strong> <%= event.details.price %></p>
                            </div>
                            <a href="<%= event.action.href %>" class="ctn"><%= event.action.label %></a>
                        </div>
                    </article>
                <% }) %>
            </div>
        </section>

        <!-- Event Categories -->
        <section class="page-section event-categories">
            <div class="title">
                <h1 class="dark">Chủ đề giải trí</h1>
                <div class="line"></div>
            </div>
            <div class="standard-row">
                <% categories.forEach(function(category){ %>
                    <div class="feature-card">
                        <i class="fa <%= category.icon %>"></i>
                        <h3><%= category.title %></h3>
                        <p><%= category.description %></p>
                    </div>
                <% }) %>
            </div>
        </section>

        <!-- up scroll -->
        <i class="arrow" onclick="topFunction()" id="upbtn"></i>

        <!--footer-->
        <%- include('../../partials/footer') %>
        <!--footer-->

        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script src="/client/js/includes.js"></script>
        <script src="/client/js/script.js"></script>
    </body>
</html>
