  <body>
    <%- include('../../partials/header') %>

    <!-- Blog Banner -->
    <header id="blog-banner">
      <div class="header-content">
        <h2 id="quote">Khám phá Hà Nội qua những câu chuyện</h2>
        <div class="line"></div>
        <h1>BLOG DU LỊCH HÀ NỘI</h1>
        <a href="#blog-content" class="ctn">Đọc ngay</a>
      </div>
